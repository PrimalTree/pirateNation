{
  "name": "pirate-nation",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel -F ./apps/web -F ./apps/admin dev",
    "build": "pnpm update-data && pnpm -r -F ./apps/web -F ./apps/admin build",
    "lint": "pnpm -r lint",
    "poller": "node dist/cron/fetchLiveScores.js",
    "update-data": "tsc -p tsconfig.cron.json && node dist/cron/updateData.js",
    "compile-cron": "tsc -p tsconfig.cron.json"
  },
  "dependencies": {
    "@pirate-nation/fetcher": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@types/node": "^20.12.7",
    "dotenv": "^16.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
